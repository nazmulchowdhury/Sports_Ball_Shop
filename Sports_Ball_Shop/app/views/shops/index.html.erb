<% if (!@shops.empty?) %>

	<% content_for(:note) do %>				
		<img src="logo.png" alt="Sports Ball Shop" style="display: block; margin-left: auto; margin-right: auto; height: 85px">
	<% end %>
	<span style="float:right">
		<%= form_tag "/shops/user_find" do %>
			<%= text_field_tag :search %>
			<%= submit_tag "Search" %>
		<% end %><br>
	</span>

	<table>
		<thead>
			<tr>
				<th>Product Type</th>
				<th>Product Brand</th>
				<th>Price</th>
				<th>Quantity</th>
				<th>Option</th>
			</tr>
		</thead>
		<tbody>
			<% @shops.each do |shop| %>
				<tr>
					<td><%= shop.Type %></td>
					<td><%= shop.Brand %></td>
					<td><%= shop.Price %></td>
					<td><%= shop.Quantity %></td>
					<td><%= link_to('Order Now!', buy_shop_with_parameter_path(shop.id)) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

<% else %>
	<h2>Sorry Product is empty</h2>
<% end %>
